<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.MainController">

    <Label text="Enter Currency Amount:"/>
    <TextField fx:id="amountField" promptText="Enter amount"/>

    <Label text="Select Target Country:"/>
    <ChoiceBox fx:id="countryChoiceBox"/>

    <Label fx:id="resultLabel" style="-fx-font-weight: bold;"/>

</VBox>
